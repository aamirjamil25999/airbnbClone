<%- include('../partials/head') %>
</head>
<body class="bg-gradient-to-r from-red-100 via-white to-red-100 min-h-screen">

  <!-- âœ… Navigation bar -->
  <%- include('../partials/nav') %>

  <!-- âœ… Login Form Section -->
  <main class="w-full max-w-md bg-white rounded-2xl shadow-2xl p-8 sm:p-10 mx-auto mt-12">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-center text-gray-800 mb-6">
      Welcome Back ðŸ‘‹
    </h1>

    <p class="text-center text-gray-600 mb-4">
      Login with your info to continue
    </p>

    <form action="/login" method="POST" class="space-y-6">
      <!-- âœ… Error Messages -->
      <%- include('../partials/errors') %>
    
      <!-- Email -->
      <div>
        <label class="block text-gray-700 font-semibold mb-1" for="email">Email</label>
        <input
          type="email"
          id="email"
          name="email"
          value="<%= oldInput.email ? oldInput.email : '' %>"
          placeholder="Enter your email"
          class="w-full px-4 py-2 border rounded-md shadow-sm focus:ring-2 focus:ring-red-500 focus:outline-none"
          required />
      </div>
    
      <!-- Password -->
      <div>
        <label class="block text-gray-700 font-semibold mb-1" for="password">Password</label>
        <input
          type="password"
          id="password"
          name="password"
          placeholder="Enter your password"
          class="w-full px-4 py-2 border rounded-md shadow-sm focus:ring-2 focus:ring-red-500 focus:outline-none"
          required />
      </div>
    
      <!-- ðŸ”— Forgot Password -->
      <div class="text-right -mt-2">
        <a href="/forgot-password" class="text-sm text-red-500 hover:underline font-medium">
          Forgot your password?
        </a>
      </div>
    
      <!-- Submit -->
      <div>
        <input
          type="submit"
          value="Sign In"
          class="w-full bg-red-500 text-white font-semibold py-2 px-4 rounded-md hover:bg-red-600 transition duration-300 cursor-pointer" />
      </div>
    </form>
    <p class="text-sm text-gray-500 mt-4 text-center">
      Donâ€™t have an account? <a href="/signup" class="text-red-500 font-semibold hover:underline">Sign up</a>
    </p>
  </main>
</body>
</html>
